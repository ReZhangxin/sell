border-1px($color)
    position: relative
    &:after
        display: block
        position: absolute
        left: 0
        bottom: 0
        width: 100%
        border-top: 1px solid $color
        content: ' '

bg-image($url)
    background-image url($url + '@3x.png')

discounts($size)
  vertical-align top
  padding 0 0 12px 0
  &:last-child
    padding-bottom 0
  .icon
    display inline-block
    width $size
    height $size
    margin-right 4px
    background-size cover
    background-repeat no-repeat
    vertical-align top
    &.decress
      bg-image('decrease_2')
    &.discount
      bg-image('discount_2')
    &.guarantee
      bg-image('guarantee_2')
    &.invoice
      bg-image('invoice_2')
    &.special
      bg-image('special_2')